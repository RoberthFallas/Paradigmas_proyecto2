<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" prefHeight="700.0" prefWidth="1024.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="proyecto2.controller.EmpleadosViewController">
   <children>
      <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Registro de empleados" textAlignment="CENTER" />
            <HBox alignment="CENTER_LEFT" prefHeight="108.0" prefWidth="1024.0">
               <children>
                  <Label text="Cédula">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtCedula" promptText="Digite su cedula ">
                     <opaqueInsets>
                        <Insets right="10.0" />
                     </opaqueInsets>
                  </TextField>
                  <Label text="Nombre">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtNombre" accessibleRole="IMAGE_VIEW" />
                  <Label text="Primer apellido">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtPApellido" />
                  <Label text="Segundo Apellido">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtSApellido" />
               </children>
               <opaqueInsets>
                  <Insets right="5.0" />
               </opaqueInsets>
            </HBox>
            <HBox alignment="CENTER_LEFT" prefHeight="83.0" prefWidth="1024.0">
               <children>
                  <Label text="Fecha Nacimiento">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <DatePicker fx:id="dtpFechaNacimiento" prefHeight="25.0" prefWidth="104.0" />
                  <Label text="Puesto">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <ChoiceBox fx:id="ckPuestos" prefWidth="150.0" />
                  <Label text="Teléfono">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtTelefono" />
                  <Label text="Correo">
                     <HBox.margin>
                        <Insets left="20.0" />
                     </HBox.margin>
                  </Label>
                  <TextField fx:id="txtCorreo" />
                  <Label text="Horas Laborales" />
                  <TextField fx:id="txtHorasLaboradas" prefHeight="25.0" prefWidth="49.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="20.0">
               <children>
                  <Button fx:id="btnBuscar" mnemonicParsing="false" onAction="#buscarEmpleado" text="Buscar" />
                  <Button fx:id="btnGuardar" mnemonicParsing="false" onAction="#GuardarEmpleado" text="Guardar" />
                  <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#CancelarEdicion" text="Cancelar" visible="false" />
               </children>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
            </HBox>
            <HBox prefHeight="383.0" prefWidth="1024.0">
               <children>
                  <TableView fx:id="tblEmpleados" prefHeight="320.0" prefWidth="1018.0">
                     <columns>
                        <TableColumn fx:id="tbCedula" prefWidth="75.0" text="Cédula" />
                        <TableColumn fx:id="tblNombre" prefWidth="97.0" text="Nombre" />
                        <TableColumn fx:id="tblPapellido" prefWidth="112.0" text="Primer Apellido" />
                        <TableColumn fx:id="tblSapellido" prefWidth="122.0" text="Segundo Apellido" />
                        <TableColumn fx:id="tblFechaNacimiento" prefWidth="108.0" text="Fecha Nacimiento" />
                        <TableColumn fx:id="tblTelefono" prefWidth="75.0" text="Telefono" />
                        <TableColumn fx:id="tblCorreo" prefWidth="75.0" text="Correo" />
                        <TableColumn fx:id="tblPuesto" prefWidth="75.0" text="Puesto" />
                        <TableColumn fx:id="tblHorasLaborales" prefWidth="110.0" text="Horas Laborales" />
                        <TableColumn fx:id="tblEliminar" prefWidth="88.0" />
                        <TableColumn fx:id="tblEditar" minWidth="0.0" prefWidth="78.0" />
                     </columns>
                  </TableView>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
